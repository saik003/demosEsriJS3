<!DOCTYPE html>
<html>  
<head>
    <meta charset="utf-8" />
    <title>Simple Map</title>
    <!-- link url css arcgis-->
    <link rel="stylesheet" href="https://js.arcgis.com/3.27/esri/css/esri.css">
    <meta name="description" content="Simple Map ArcGIS API">
    <meta name="author" content="Carlos Guerrero LÃ³pez">
    <!-- mobile viewport optimisation -->
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <style>
        html, body,#map{
            height: 50%;
            margin: 0;
            padding: 0;
        }
    </style>

</head>  
<body>
    <div id="map"></div>
    <!-- url api ArcGIS -->
    <script src="https://js.arcgis.com/3.27/"></script>
    <script>
        require(["esri/map", "dojo/domReady!"], function(Map) {
            var map = new Map("map", {
                center: [-118, 34.5],
                zoom: 8,
                basemap: "topo"
            });
        });
    </script>
    
</body>
</html>